<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Name</th>
      <th>Category</th>
      <th>Ingredients</th>
      <th>Instructions</th>
      <th>Minutes to Prepare</th>
      <th>Minutes to Cook</th>
      <th>Total Minutes</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= image_tag (recipe.picture_url), :width=> 100 %></td>
        <td><%= recipe.name %></td>
        <td><%= recipe.category %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.instructions %></td>
        <td><%= recipe.minutes_to_prepare %></td>
        <td><%= recipe.minutes_to_cook %></td>
        <td><%= recipe.minutes_total %></td>

        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

